{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/root",
    "definitions": {
        "root": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "paths": {
                    "$ref": "#/definitions/Paths"
                },
                "conf": {
                    "$ref": "#/definitions/Conf"
                },
                "actions": {
                    "$ref": "#/definitions/Actions"
                },
                "genres": {
                    "$ref": "#/definitions/Genres"
                }
            },
            "required": [
                "actions",
                "paths"
            ],
            "title": "root"
        },
        "Actions": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^Key_[a-zA-Z0-9]+$": {
                    "type": "string"
                }
            },
            "title": "Actions"
        },
        "Conf": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "auto_play_next_track": {
                    "type": "boolean"
                },
                "log_level": {
                    "type": "string",
                    "enum": [
                        "DEBUG",
                        "INFO",
                        "WARNING",
                        "ERROR",
                        "CRITICAL"
                    ]
                }
            }
        },
        "Genres": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Z]$": {
                    "type": "string"
                }
            },
            "title": "Genres"
        },
        "Paths": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "tracks": {
                    "type": "string"
                },
                "rename": {
                    "type": "string"
                },
                "dustbin": {
                    "type": "string"
                },
                "keep": {
                    "type": "string"
                }
            },
            "required": [
                "dustbin",
                "rename"
            ],
            "title": "Paths"
        }
    }
}